{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "es2017",
        "lib": ["esnext"],
        "outDir": "./build/",
        "baseUrl": "src/",
        "sourceMap": false,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowUnreachableCode": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ]
}
